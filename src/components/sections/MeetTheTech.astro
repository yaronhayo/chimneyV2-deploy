---
/**
 * MeetTheTech.astro — Technician Humanization Section
 * CRO: Kills the doubt "Who's coming into my home?"
 * Playbook §3: "Meet your technician" — real faces, names, credentials.
 */
const technicians = [
  {
    name: 'Mike R.',
    role: 'Lead Chimney Technician',
    certifications: 'CSIA Certified · 8 years experience',
    quote: "I treat every chimney like it's protecting my own family.",
    image: '/images/team/mike.png',
  },
  {
    name: 'James T.',
    role: 'Air Quality Specialist',
    certifications: 'NFI Certified · EPA trained',
    quote: "Clean air isn't a luxury — it's a right.",
    image: '/images/team/james.png',
  },
];

const trustBadges = [
  { icon: 'verified_user', label: 'Background-checked' },
  { icon: 'health_and_safety', label: 'Drug-tested' },
  { icon: 'shield', label: 'Insured & bonded' },
];
---

<section class="meet-tech section" id="meet-the-team">
  <div class="container">
    <div class="meet-tech__header" data-reveal>
      <span class="section-label">Real People, Real Expertise</span>
      <h2 class="section-heading">Meet the Technicians Who'll Be in Your Home</h2>
      <hr class="section-divider" />
    </div>

    <div class="meet-tech__grid" data-reveal-group="100">
      {
        technicians.map((tech) => (
          <div class="meet-tech__card" data-reveal>
            <div class="meet-tech__avatar">
              <img
                src={tech.image}
                alt={`${tech.name} — ${tech.role}`}
                width="120"
                height="120"
                loading="lazy"
                class="meet-tech__photo"
              />
            </div>
            <div class="meet-tech__info">
              <h3 class="meet-tech__name">{tech.name}</h3>
              <p class="meet-tech__role">{tech.role}</p>
              <p class="meet-tech__certs">
                <span class="material-symbols-outlined">verified</span>
                {tech.certifications}
              </p>
              <blockquote class="meet-tech__quote">"{tech.quote}"</blockquote>
            </div>
          </div>
        ))
      }
    </div>

    <div class="meet-tech__badges" data-reveal>
      {
        trustBadges.map((badge) => (
          <div class="meet-tech__badge">
            <span class="material-symbols-outlined">{badge.icon}</span>
            <span>{badge.label}</span>
          </div>
        ))
      }
    </div>

    <p class="meet-tech__footer" data-reveal>
      <span class="material-symbols-outlined">school</span>
      Every technician completes our 40-point training before entering your home.
    </p>
  </div>
</section>

<style>
  .meet-tech {
    background: linear-gradient(180deg, var(--color-charcoal) 0%, rgba(30, 30, 30, 1) 100%);
  }

  .meet-tech__header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .meet-tech__header .section-divider {
    margin-left: auto;
    margin-right: auto;
  }

  .meet-tech__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
    max-width: 740px;
    margin: 0 auto var(--space-2xl);
  }

  .meet-tech__card {
    display: flex;
    gap: var(--space-lg);
    padding: var(--space-xl);
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: var(--radius-xl);
    transition: border-color var(--transition-base);
  }

  .meet-tech__card:hover {
    border-color: rgba(255, 193, 7, 0.2);
  }

  .meet-tech__avatar {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    border-radius: var(--radius-full);
    border: 3px solid var(--color-primary);
    flex-shrink: 0;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(255, 193, 7, 0.2);
  }

  .meet-tech__photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .meet-tech__info {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .meet-tech__name {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
  }

  .meet-tech__role {
    font-size: var(--font-size-sm);
    color: var(--color-primary);
    font-weight: var(--font-weight-medium);
  }

  .meet-tech__certs {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
  }

  .meet-tech__certs .material-symbols-outlined {
    font-size: 14px;
    color: var(--color-primary);
  }

  .meet-tech__quote {
    font-family: var(--font-serif);
    font-style: italic;
    font-size: var(--font-size-sm);
    color: var(--color-text-light);
    margin-top: var(--space-sm);
    padding-left: var(--space-md);
    border-left: 2px solid rgba(255, 193, 7, 0.3);
    line-height: var(--line-height-relaxed);
  }

  .meet-tech__badges {
    display: flex;
    justify-content: center;
    gap: var(--space-xl);
    flex-wrap: wrap;
    margin-bottom: var(--space-lg);
  }

  .meet-tech__badge {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-light);
  }

  .meet-tech__badge .material-symbols-outlined {
    font-size: 20px;
    color: var(--color-success);
    font-variation-settings: 'FILL' 1;
  }

  .meet-tech__footer {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    text-align: center;
  }

  .meet-tech__footer .material-symbols-outlined {
    font-size: 18px;
    color: var(--color-primary);
  }

  @media (min-width: 768px) {
    .meet-tech__grid {
      grid-template-columns: repeat(2, 1fr);
      max-width: 900px;
    }
  }
</style>
