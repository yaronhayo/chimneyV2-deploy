---
import businessInfo from '../../data/business-info.json';

const testimonials = [
  {
    quote:
      "Our home smelled like smoke every time we lit the fireplace. We called 1st Class, they found a blocked flue liner, cleaned it out, and now our fireplace works perfectly. I'm kicking myself for not calling sooner.",
    name: 'Jennifer & Mark W.',
    title: 'Homeowners · 3 years as customers',
    location: 'Dallas, TX',
    image: '/images/avatars/jennifer.png',
    problem: 'Smoke smell in home',
    outcome: 'Fixed in a single visit',
    isRecent: false,
  },
  {
    quote:
      "My daughter's allergies were getting worse every winter. Turns out our air ducts hadn't been cleaned in 8 years and were packed with dust and mold. Within a week of the cleaning, her symptoms improved dramatically.",
    name: 'Sarah Mitchell',
    title: 'Mother of two · First-time customer',
    location: 'Miami, FL',
    image: '/images/avatars/sarah.png',
    problem: "Child's worsening allergies",
    outcome: 'Symptoms improved within 1 week',
    isRecent: true,
  },
  {
    quote:
      'During a routine inspection, they found a crack in our flue liner we had no idea about. They showed us photos, explained the risk, and gave us options — no pressure. We had it fixed the same day. Could have been a disaster.',
    name: 'Robert Chen',
    title: 'Estate Owner · Referred by neighbor',
    location: 'Boston, MA',
    image: '/images/avatars/david.png',
    problem: 'Hidden flue liner crack',
    outcome: 'Repaired same day',
    isRecent: false,
  },
];
---

<section class="testimonials section" id="reviews" aria-label="Client Testimonials">
  <div class="container">
    <div class="testimonials__header" data-reveal>
      <div>
        <span class="section-label">Social Proof</span>
        <h2 class="testimonials__heading">Real Stories From Homeowners Just Like You</h2>
        <p class="testimonials__subheading">
          Every job starts with a problem. Here's how we solved them.
        </p>
      </div>
      <div class="testimonials__rating">
        <span class="testimonials__score">{businessInfo.rating.score}</span>
        <div class="testimonials__stars">
          {Array.from({ length: 5 }).map(() => <span class="material-symbols-outlined">star</span>)}
        </div>
        <span class="testimonials__count">Based on {businessInfo.rating.count}+ reviews</span>
        <div class="testimonials__sources">
          <span class="testimonials__source-badge">
            <svg viewBox="0 0 24 24" width="16" height="16" fill="currentColor" aria-hidden="true"
              ><path
                d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 0 1-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1Z"
              ></path><path
                d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23Z"
              ></path><path
                d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62Z"
              ></path><path
                d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53Z"
              ></path></svg
            >
            Google
          </span>
          <span class="testimonials__source-badge">
            <svg viewBox="0 0 24 24" width="16" height="16" fill="currentColor" aria-hidden="true"
              ><path
                d="M20.16 12.59c0-1.09-.09-2.15-.25-3.17H12v5.07h4.58a3.88 3.88 0 0 1-1.7 2.57v2.13h2.75c1.61-1.48 2.53-3.66 2.53-6.6Z M12 21c2.3 0 4.22-.77 5.63-2.08l-2.75-2.13c-.76.51-1.74.81-2.88.81-2.22 0-4.1-1.5-4.77-3.52H4.38v2.2C5.79 19.25 8.66 21 12 21Z M7.23 14.08A5.36 5.36 0 0 1 6.95 12c0-.72.12-1.42.28-2.08V7.72H4.38A8.95 8.95 0 0 0 3 12c0 1.45.35 2.83.97 4.04l2.85-1.96h.41Z"
              ></path></svg
            >
            Yelp
          </span>
        </div>
      </div>
    </div>

    <div class="testimonials__scroll-track">
      {
        testimonials.map((t) => (
          <div
            class={`testimonials__card ${t.isRecent ? 'testimonials__card--recent' : ''}`}
            data-reveal
          >
            {t.isRecent && (
              <span class="testimonials__recent-badge">
                <span class="material-symbols-outlined">new_releases</span>
                Most Recent Review
              </span>
            )}
            <span class="testimonials__quote-mark">&ldquo;</span>
            <div class="testimonials__problem-tag">
              <span class="material-symbols-outlined">report_problem</span>
              {t.problem}
            </div>
            <div class="testimonials__stars-inline">★★★★★</div>
            <p class="testimonials__text">{t.quote}</p>
            <div class="testimonials__outcome">
              <span class="material-symbols-outlined">check_circle</span>
              {t.outcome}
            </div>
            <div class="testimonials__author">
              <div class="testimonials__avatar">
                <img
                  src={t.image}
                  alt={t.name}
                  width="48"
                  height="48"
                  loading="lazy"
                  class="testimonials__avatar-photo"
                />
              </div>
              <div>
                <div class="testimonials__name">{t.name}</div>
                <div class="testimonials__title">{t.title}</div>
                <div class="testimonials__location">
                  <span class="material-symbols-outlined">location_on</span>
                  {t.location}
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .testimonials {
    background-color: var(--color-stone);
  }

  .testimonials__header {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
    margin-bottom: var(--space-3xl);
  }

  .testimonials__heading {
    font-size: var(--font-size-3xl);
    margin-bottom: var(--space-sm);
    text-shadow: 0 2px 15px rgba(0, 0, 0, 0.3);
  }

  .testimonials__subheading {
    color: var(--color-text-muted);
    font-size: var(--font-size-lg);
  }

  .testimonials__rating {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .testimonials__score {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-white);
  }

  .testimonials__stars {
    display: flex;
    color: var(--color-primary);
  }

  .testimonials__stars .material-symbols-outlined {
    font-size: 20px;
    font-variation-settings: 'FILL' 1;
  }

  .testimonials__count {
    font-size: var(--font-size-base);
    color: var(--color-text-muted);
    font-weight: var(--font-weight-medium);
    margin-left: var(--space-sm);
  }

  /* Scroll Track */
  .testimonials__scroll-track {
    display: flex;
    gap: var(--space-lg);
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    padding-bottom: var(--space-xl);
    scrollbar-width: none;
  }

  .testimonials__scroll-track::-webkit-scrollbar {
    display: none;
  }

  /* Card */
  .testimonials__card {
    flex: 0 0 100%;
    scroll-snap-align: center;
    background-color: var(--color-charcoal);
    padding: var(--space-xl);
    border: 1px solid rgba(255, 255, 255, 0.05);
    position: relative;
    transition:
      border-color var(--transition-base),
      transform var(--transition-base);
  }

  .testimonials__card:hover {
    border-color: rgba(216, 67, 21, 0.5);
    transform: translateY(-2px);
  }

  .testimonials__quote-mark {
    position: absolute;
    top: var(--space-xl);
    right: var(--space-xl);
    font-family: var(--font-serif);
    font-size: 64px;
    line-height: 1;
    color: rgba(255, 255, 255, 0.05);
    pointer-events: none;
  }

  /* Problem tag */
  .testimonials__problem-tag {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--font-size-xs);
    color: var(--color-error);
    font-weight: var(--font-weight-bold);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
    margin-bottom: var(--space-md);
    padding: var(--space-xs) var(--space-sm);
    background: rgba(239, 68, 68, 0.08);
    border: 1px solid rgba(239, 68, 68, 0.15);
    border-radius: var(--radius-sm);
  }

  .testimonials__problem-tag .material-symbols-outlined {
    font-size: 14px;
  }

  .testimonials__stars-inline {
    color: var(--color-primary);
    font-size: var(--font-size-sm);
    margin-bottom: var(--space-lg);
  }

  .testimonials__text {
    font-size: var(--font-size-lg);
    font-style: italic;
    color: var(--color-text-light);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-xl);
    position: relative;
    z-index: 1;
  }

  .testimonials__author {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }

  .testimonials__avatar {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-full);
    border: 2px solid var(--color-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: var(--font-weight-bold);
    font-size: var(--font-size-sm);
    color: var(--color-primary);
    background: rgba(216, 67, 21, 0.1);
    overflow: hidden;
  }

  .testimonials__avatar-photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .testimonials__name {
    font-weight: var(--font-weight-bold);
    color: var(--color-text-white);
  }

  .testimonials__title {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wider);
  }

  .testimonials__sources {
    display: flex;
    gap: var(--space-md);
    margin-top: var(--space-sm);
  }

  .testimonials__source-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    padding: var(--space-xs) var(--space-sm);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-sm);
    background: rgba(255, 255, 255, 0.03);
  }

  .testimonials__source-badge svg {
    opacity: 0.7;
  }

  @media (min-width: 768px) {
    .testimonials__header {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-end;
    }

    .testimonials__card {
      flex: 0 0 420px;
    }
  }

  /* Outcome tag */
  .testimonials__outcome {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-bold);
    color: var(--color-success);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
    padding: var(--space-xs) var(--space-sm);
    background: rgba(34, 197, 94, 0.08);
    border: 1px solid rgba(34, 197, 94, 0.15);
    border-radius: var(--radius-sm);
    margin-bottom: var(--space-lg);
  }

  .testimonials__outcome .material-symbols-outlined {
    font-size: 14px;
  }

  /* Location */
  .testimonials__location {
    display: inline-flex;
    align-items: center;
    gap: 2px;
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    margin-top: 2px;
  }

  .testimonials__location .material-symbols-outlined {
    font-size: 12px;
  }

  /* Recent badge */
  .testimonials__card--recent {
    border-color: rgba(216, 67, 21, 0.3);
  }

  .testimonials__recent-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
    margin-bottom: var(--space-md);
  }

  .testimonials__recent-badge .material-symbols-outlined {
    font-size: 16px;
  }
</style>
